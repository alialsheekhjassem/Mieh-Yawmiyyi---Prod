<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.registration.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_check_code"
            app:destination="@id/navigation_check_code"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="PHONE_NUMBER"
                app:argType="string"/>

        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_check_code"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.registration.check_code.CheckCodeFragment"
        android:label="navigation_check_code"
        tools:layout="@layout/fragment_check_code">

        <action
            android:id="@+id/action_check_code_finish_account_setup"
            app:destination="@id/navigation_finish_account"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/navigation_check_code"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_check_code_login"
            app:destination="@id/navigation_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/navigation_check_code"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_finish_account"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.registration.finish_account.FinishAccountFragment"
        android:label="navigation_finish_account"
        tools:layout="@layout/fragment_finish_account">

        <action
            android:id="@+id/action_finish_account_invitation_link"
            app:destination="@id/navigation_invitation_link"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/navigation_finish_account"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_invitation_link"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.registration.invitation_link.InvitationFragment"
        android:label="navigation_invitation_link"
        tools:layout="@layout/fragment_invitation_link">

        <action
            android:id="@+id/action_invitation_link_login"
            app:destination="@id/navigation_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/navigation_finish_account"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>