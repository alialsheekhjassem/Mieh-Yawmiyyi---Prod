<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.tasks.TasksFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_tasks_to_quizzes"
            app:destination="@id/navigation_quizzes"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_quizzes"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.quizzes.QuizzesFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_quizzes" />

    <fragment
        android:id="@+id/navigation_our_store"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.our_store.OurStoreFragment"
        android:label="@string/our_store"
        tools:layout="@layout/fragment_our_store" />

    <fragment
        android:id="@+id/navigation_your_orders"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.orders.OrdersFragment"
        android:label="@string/title_orders"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/navigation_invitations"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.invitations.InvitationsFragment"
        android:label="@string/invitations"
        tools:layout="@layout/fragment_invitations" />

    <fragment
        android:id="@+id/navigation_tickets"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.tickets.TicketsFragment"
        android:label="@string/title_tickets"
        tools:layout="@layout/fragment_tickets" >
        <action
            android:id="@+id/action_tickets_to_tasks"
            app:destination="@id/navigation_tasks"
            app:popUpTo="@id/navigation_tickets"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_invitations"
            app:destination="@id/navigation_invitations"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_home_to_tickets"
            app:destination="@id/navigation_tickets"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true">
            <argument
                android:name="IS_WINNER"
                app:argType="boolean"/>
        </action>
        <action
            android:id="@+id/action_home_to_orders"
            app:destination="@id/navigation_your_orders"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_home_to_gifts"
            app:destination="@id/navigation_our_store"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_home_to_live_stream"
            app:destination="@id/navigation_live_stream"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_home_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true">
            <argument
                android:name="IS_WINNER"
                app:argType="boolean"/>
        </action>
        <action
            android:id="@+id/action_home_to_notifications"
            app:destination="@id/navigation_notifications"
            app:popUpToInclusive="false"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_live_stream"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.live_stream.LiveStreamFragment"
        android:label="@string/title_live_stream"
        tools:layout="@layout/fragment_live_stream">
        <action
            android:id="@+id/action_live_stream_to_tasks"
            app:destination="@id/navigation_tasks"
            app:popUpTo="@id/navigation_live_stream"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_about_the_app"
        android:name="com.magma.miyyiyawmiyyi.android.presentation.home.ui.about_us.AboutUsFragment"
        android:label="@string/about_app"
        tools:layout="@layout/fragment_about_us" />
</navigation>