<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.magma.miyyiyawmiyyi.android.model.GiftCard" />

    </data>

    <androidx.cardview.widget.CardView
        style="@style/MaterialCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_default">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/spacing_large"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/gift_info"
                android:textColor="@color/orange_3"
                android:textSize="@dimen/size_20sp"
                app:layout_constraintBottom_toTopOf="@id/img_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close_circle"
                app:layout_constraintBottom_toBottomOf="@+id/txt_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txt_title" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/facebook"
                image_url="@{item.image}"
                app:layout_constraintBottom_toTopOf="@id/line_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title" />

            <View
                android:id="@+id/line_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/spacing_large"
                android:background="@color/color_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_icon" />


            <TextView
                android:id="@+id/txt_body"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/spacing_large"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:gravity="center"
                text_translate="@{item.name}"
                android:textColor="@color/grey_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_1"
                tools:text="@string/the_points_will_not_be_counted_until_the_receiver_get_at_least_10_tickets" />


            <TextView
                android:id="@+id/txt_title_total_point_amount"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/total_point_amount"
                android:textColor="@color/grey_16"
                app:layout_constraintBottom_toTopOf="@+id/txt_total_point_amount"
                app:layout_constraintEnd_toStartOf="@+id/txt_title_total_cash_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_body" />

            <TextView
                android:id="@+id/txt_total_point_amount"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_default"
                android:gravity="center"
                android:text="1500 Points"
                android:textColor="@color/orange_5"
                android:textSize="@dimen/size_toolbar_title"
                app:layout_constraintBottom_toTopOf="@+id/btn_continue"
                app:layout_constraintEnd_toStartOf="@+id/txt_total_cash_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_total_point_amount" />


            <TextView
                android:id="@+id/txt_title_total_cash_amount"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/total_cash_amount"
                android:textColor="@color/grey_16"
                app:layout_constraintBottom_toTopOf="@+id/txt_total_cash_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_title_total_point_amount"
                app:layout_constraintTop_toBottomOf="@+id/txt_body" />

            <TextView
                android:id="@+id/txt_total_cash_amount"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_default"
                android:gravity="center"
                text_translate="@{item.name}"
                android:textColor="@color/green_200"
                android:textSize="@dimen/size_20sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_continue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_total_point_amount"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_total_cash_amount" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continue"
                style="@style/MaterialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/confirm_card_request"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>