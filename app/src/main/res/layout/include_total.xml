<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="value"
            type="String" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_default"
        android:background="@drawable/bg_inner_shadow"
        app:cardCornerRadius="@dimen/spacing_default"
        app:cardElevation="@dimen/spacing_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/image_pos_product_size"
                android:layout_height="@dimen/image_pos_product_size"
                android:scaleType="fitCenter"
                android:layout_marginVertical="@dimen/spacing_default"
                android:layout_marginStart="@dimen/spacing_default"
                image_drawable="@{drawable}"
                tools:src="@drawable/ticket"
                app:layout_constraintBottom_toTopOf="@id/barrier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialTextViewSmallStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:layout_marginTop="@dimen/spacing_default"
                android:gravity="center"
                android:text="@{title}"
                android:textColor="@color/orange_4"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txt_total_value"
                tools:text="Crepaway" />

            <TextView
                android:id="@+id/txt_total_value"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:gravity="center"
                android:text="@{value}"
                android:textSize="@dimen/size_title"
                android:textColor="@color/orange_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_icon"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintBottom_toTopOf="@+id/txt_show_all"
                tools:text="100 Point" />

            <TextView
                android:id="@+id/txt_show_all"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/show_all"
                android:textColor="@color/grey_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_icon"
                app:layout_constraintTop_toBottomOf="@+id/txt_total_value"
                app:layout_constraintBottom_toTopOf="@id/barrier" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"/>

            <TextView
                android:id="@+id/txt_view"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_medium"
                android:gravity="center"
                android:text="@string/view"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_helf_primary"
                android:textSize="@dimen/size_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>