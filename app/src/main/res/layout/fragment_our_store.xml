<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.magma.miyyiyawmiyyi.android.presentation.home.ui.our_store.OurStoreViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".presentation.home.ui.our_store.OurStoreFragment">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lyt_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/bg_rounded_primary"
                android:backgroundTint="@color/orange_3"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@id/guideline1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_title_total_points"
                    style="@style/MaterialBoldTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/spacing_default"
                    android:fontFamily="@font/product_sans_bold"
                    android:text="@string/total_points"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_title" />

                <TextView
                    android:id="@+id/txt_total_points"
                    style="@style/MaterialBoldTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/spacing_default"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded"
                    android:fontFamily="@font/product_sans_bold"
                    android:gravity="center"
                    android:padding="@dimen/spacing_default"
                    android:text="@string/init_pts"
                    android:textColor="@color/orange_3"
                    android:textSize="@dimen/size_title" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/txt_title_google_gift_cards"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_20dp"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/google_gift_cards"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                android:textSize="@dimen/size_big"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/lyt_points" />

            <TextView
                android:id="@+id/txt_title_google_exchange"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/exchange_your_points_with_google_gift_cards"
                android:textColor="@color/grey_40"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_google_gift_cards" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_google_cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:orientation="horizontal"
                tools:listitem="@layout/item_gift_card"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_google_exchange" />

            <TextView
                android:id="@+id/txt_title_gift_cards"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_20dp"
                android:fontFamily="@font/product_sans_bold"
                android:text="@string/_100_yawmiyyi_gift_cards"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                android:textSize="@dimen/size_big"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/recycler_google_cards" />

            <TextView
                android:id="@+id/txt_title_exchange_1"
                style="@style/MaterialTextViewBodyStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:fontFamily="@font/product_sans_bold"
                android:visibility="gone"
                android:text="@string/exchange_your_points_with_google_gift_cards"
                android:textColor="@color/grey_40"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_gift_cards" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_100Yaw_cards"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/vertical_20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="gone"
                tools:listitem="@layout/item_gift_card"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_exchange_1" />


            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_google_exchange"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/txt_empty"
                style="@style/MaterialTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_cards"
                android:visibility="gone"
                android:layout_margin="@dimen/spacing_large"
                tools:visibility="visible"
                android:textColor="@color/grey_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_google_exchange" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>