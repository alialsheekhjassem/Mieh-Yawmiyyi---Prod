<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="value"
            type="String" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/golden_cover"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/spacing_navigation_top"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialTextViewSmallStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:layout_marginTop="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/chance_golden_text"
                android:textColor="@color/green_700"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintEnd_toEndOf="@id/img_cover"
                app:layout_constraintTop_toTopOf="@id/img_cover"
                app:layout_constraintBottom_toBottomOf="@id/img_cover" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>