<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.magma.miyyiyawmiyyi.android.model.PurchaseCard" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.magma.miyyiyawmiyyi.android.utils.listeners.RecyclerItemCardListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        android:elevation="0dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="@dimen/spacing_icon_padding">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <View
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/orange_7"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/txt_status"
                style="@style/MaterialTextViewSmallStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{item.status}"
                txt_status="@{item.status}"
                view_header="@{viewHeader}"
                android:textColor="@color/orange_7"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:drawablePadding="@dimen/spacing_medium"
                app:layout_constraintEnd_toEndOf="@id/img_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_header"
                app:drawableStartCompat="@drawable/ic_check_circle" />

            <TextView
                android:id="@+id/txt_package"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/package_"
                android:textColor="@color/grey_7"
                android:gravity="center"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_default"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintEnd_toStartOf="@+id/txt_points"
                app:layout_constraintBottom_toTopOf="@+id/txt_package_value"
                app:layout_constraintStart_toEndOf="@id/line_1"
                app:layout_constraintTop_toBottomOf="@+id/view_header" />

            <TextView
                android:id="@+id/txt_package_value"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                text_translate="@{item.gift.name}"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_default"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_default"
                app:layout_constraintEnd_toStartOf="@id/txt_points_value"
                app:layout_constraintBottom_toTopOf="@id/btn_action"
                app:layout_constraintStart_toEndOf="@id/line_1"
                app:layout_constraintTop_toBottomOf="@+id/txt_package" />

            <TextView
                android:id="@+id/txt_points"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textColor="@color/grey_7"
                android:gravity="center"
                android:layout_marginEnd="@dimen/spacing_large"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txt_points_value"
                app:layout_constraintStart_toEndOf="@id/txt_package"
                app:layout_constraintTop_toBottomOf="@+id/view_header" />

            <TextView
                android:id="@+id/txt_points_value"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{item.gift.price.toString()}"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_default"
                android:layout_marginEnd="@dimen/spacing_large"
                app:layout_constraintBottom_toTopOf="@id/btn_action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_package_value"
                app:layout_constraintTop_toBottomOf="@+id/txt_points" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/image_product_create_size"
                android:scaleType="fitCenter"
                android:padding="@dimen/spacing_large"
                android:src="@drawable/logo"
                image_url="@{item.gift.image}"
                app:layout_constraintWidth_percent="0.45"
                app:layout_constraintEnd_toStartOf="@+id/line_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_status"/>

            <View
                android:id="@+id/line_1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/color_hint"
                android:layout_marginVertical="@dimen/spacing_default"
                app:layout_constraintStart_toEndOf="@+id/img_card"
                app:layout_constraintTop_toBottomOf="@+id/view_header"
                app:layout_constraintBottom_toTopOf="@id/btn_action"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action"
                style="@style/MaterialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_5"
                android:minHeight="0dp"
                android:paddingVertical="@dimen/nav_header_vertical_spacing"
                android:text="@string/get_code"
                android:textColor="@color/grey_6"
                android:textSize="@dimen/size_small"
                app:cornerRadius="@dimen/dimen_0"
                android:onClick="@{()->viewModel.onItemCardClicked(item,position)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_card"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>