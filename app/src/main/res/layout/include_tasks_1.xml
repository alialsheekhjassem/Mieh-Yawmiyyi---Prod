<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="value"
            type="String" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_png_tasks_1"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/spacing_navigation_top"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_title"
                style="@style/MaterialBoldTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:layout_marginTop="@dimen/vertical_20dp"
                android:gravity="center"
                android:text="@string/get_tickets"
                android:textSize="@dimen/size_toolbar_title"
                android:textColor="@color/dark_blue"
                app:layout_constraintWidth_percent="0.43"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@+id/txt_body"
                app:layout_constraintEnd_toEndOf="@id/img_cover"
                app:layout_constraintTop_toTopOf="@id/img_cover" />

            <TextView
                android:id="@+id/txt_body"
                style="@style/MaterialTextViewSmallStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:gravity="center"
                android:text="@string/by_watching_ads_click_the_button_below_to_start"
                android:textColor="@color/grey_15"
                app:layout_constraintBottom_toTopOf="@+id/btn_watch_now"
                app:layout_constraintWidth_percent="0.43"
                app:layout_constraintEnd_toEndOf="@id/img_cover"
                app:layout_constraintTop_toBottomOf="@+id/txt_title" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_watch_now"
                style="@style/MaterialButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_default"
                android:layout_marginBottom="@dimen/vertical_20dp"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:backgroundTint="@color/orange_5"
                android:minHeight="0dp"
                android:paddingVertical="@dimen/nav_header_vertical_spacing"
                android:text="@string/watch_ads"
                android:textColor="@color/white"
                android:textSize="@dimen/size_small"
                app:layout_constraintBottom_toBottomOf="@id/img_cover"
                app:layout_constraintStart_toStartOf="@+id/txt_body"
                app:layout_constraintEnd_toEndOf="@id/txt_body"
                app:layout_constraintTop_toBottomOf="@+id/txt_body" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>