<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.magma.miyyiyawmiyyi.android.presentation.home.ui.home.HomeViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lyt_totals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/spacing_default"
                android:background="@drawable/bg_rounded_grey"
                android:backgroundTint="@color/grey_3"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/card_points"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/spacing_default"
                    layout="@layout/include_total"
                    app:drawable="@{@drawable/gold_sack}"
                    app:title="@{@string/total_points}"/>

                <include
                    android:id="@+id/card_tickets"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_default"
                    android:layout_marginVertical="@dimen/spacing_default"
                    layout="@layout/include_total"
                    app:drawable="@{@drawable/ticket}"
                    app:title="@{@string/total_tickets}"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lyt_winners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_default"
                android:layout_marginHorizontal="@dimen/spacing_default"
                android:background="@drawable/bg_rounded_grey"
                android:backgroundTint="@color/grey_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lyt_totals">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_winners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="4"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_winner" />
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/include_golden"
                    android:layout_marginBottom="@dimen/spacing_navigation_top"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>