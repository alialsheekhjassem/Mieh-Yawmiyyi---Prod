        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/orange_5" />
                    <corners android:radius="5dp" />

                </shape>
            </item>
            <item android:gravity="bottom">
                <shape>
                    <solid android:color="@color/orange_3" />
